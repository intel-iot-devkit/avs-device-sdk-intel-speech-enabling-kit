#!/bin/bash

if [ ! -d "$HOME/Logs/" ] ; then
    mkdir $HOME/Logs/
fi

ts=`date +%b_%a_%d_%Y_%H:%M`

if [ -d "/sys/kernel/pca9956_sue_led/" ] ; then
    sudo chown $USER:root /sys/kernel/pca9956_sue_led/*
    echo 1 > /sys/kernel/pca9956_sue_led/init
fi

firefox -new-window https://alexa.amazon.com &

cd [AVSROOT]/avs/sdk-build/SampleApp/src
TZ=UTC ./SampleApp [AVSROOT]/avs/sdk-build/Integration/AlexaClientSDKConfig.json DEBUG9 2>$HOME/Logs/${ts}_stderr.log | tee $HOME/Logs/${ts}_stdout.log



